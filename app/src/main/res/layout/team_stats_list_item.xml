<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="5dp">
    <TextView
        android:text="ha1"
        android:id="@+id/textTeamStatsLeft"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textAlignment="gravity"
        android:gravity="center"
        android:layout_width="100.0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0" />
    <RelativeLayout
        android:layout_width="100.0dp"
        android:layout_height="wrap_content"
        android:id="@+id/relativeCenter"
        android:gravity="center"
        android:layout_toRightOf="@id/textTeamStatsLeft">
        <TextView
            android:text="ha2"
            android:id="@+id/textTeamStatsCenter"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textAlignment="gravity"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="100.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />
    </RelativeLayout>
    <TextView
        android:text="ha3"
        android:id="@+id/textTeamStatsRight"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textAlignment="gravity"
        android:gravity="center"
        android:layout_width="100.0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:layout_toRightOf="@id/relativeCenter"/>

</RelativeLayout>