<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="achijones.footballcoach.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="15dp"
        android:minHeight="15dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10sp">
            <TextView
                android:text="Team:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="60.0dp"
                android:layout_height="wrap_content"
                android:id="@+id/examineTeamText"
                android:layout_marginRight="0.0dp" />
            <Spinner
                android:layout_height="wrap_content"
                android:id="@+id/examineConfSpinner"
                android:layout_width="100.0dp"
                android:layout_toRightOf="@id/examineTeamText" />
            <Spinner
                android:layout_height="wrap_content"
                android:id="@+id/examineTeamSpinner"
                android:layout_width="180.0dp"
                android:layout_toRightOf="@id/examineConfSpinner" />
        </RelativeLayout>
        <TextView
            android:text="Current Team (W - L) "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textAlignment="gravity"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/currentTeamText"
            android:textStyle="bold" />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10sp">
            <Button
                android:text="Team Stats"
                android:layout_width="115.0dp"
                android:layout_height="wrap_content"
                android:id="@+id/teamStatsButton" />
            <Button
                android:text="Roster"
                android:layout_width="100.0dp"
                android:layout_height="wrap_content"
                android:id="@+id/playerStatsButton"
                android:layout_toRightOf="@id/teamStatsButton" />
            <Button
                android:text="Games"
                android:layout_width="115.0dp"
                android:layout_height="wrap_content"
                android:id="@+id/teamScheduleButton"
                android:layout_toRightOf="@id/playerStatsButton" />
        </RelativeLayout>
        <TextView
            android:text="Team Stats / Player Stats / Team Sched"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textAlignment="gravity"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textTabDescription" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="0dip"
            android:layout_weight="5">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mainList"
                android:paddingTop="5dp"
                android:paddingBottom="10dp" >
            </ListView>
            <ExpandableListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/playerStatsExpandList"
                android:paddingTop="5dp"
                android:paddingBottom="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical" >
            <Button
                android:text="Play Week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/simGameButton" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
